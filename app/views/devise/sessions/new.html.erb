<div class="login">
  <div class="container-form" id="container">

    <div class="form-container sign-up-container">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <h1 class="form-title">Create Your Account</h1>
        <span class="span-description">Create an account for free</span>
        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: 'Email', label: false, class: 'new' %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, placeholder: 'Password', label: false, class: 'new' %>
        <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, placeholder: 'Confirm Password', label: false, class: 'new' %>

        <%= f.button :submit, "Sign Up", class: "btn1" %>

      <% end %>
    </div>

    <div class="form-container sign-in-container">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <h1 class="form-title">Sign In</h1>
        <span class="span-description">Already have account</span>
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, placeholder: 'Email', label: false, class: 'mz-2 new' %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, placeholder: 'Password', label: false, class: 'mz-2 new' %>

        <%= f.button :submit, "Login", class: "btn1" %>

      <% end %>
    </div>

    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1 class="form-title">Welcome back</h1>
          <p class="tip">If you Already have account please login to keep connected with us.</p>
          <button class="btn1" id="signIn">Sign In</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1 class="form-title">Hello Friend!</h1>
          <p class="tip">Don't have account? please sign up to register</p>
          <button class="btn1" id="signUp">Sign Up</button>
        </div>
      </div>
    </div>

  </div>
</div>


<script>

var signInButton = document.getElementById('signIn');
var signUpButton = document.getElementById('signUp');
var container = document.getElementById('container');


signUpButton.addEventListener('click', () => {
  container.classList.add('right-panel-active');
});

signInButton.addEventListener('click', () => {
  container.classList.remove('right-panel-active');
})


</script>

