<div class = "container mb-5" style="width: 800px;">
<%= simple_form_for @pet do |f| %>
    <%= f.input :name %>
    <%= f.input :specie %>
    <%= f.input :birthday, as: :date, html5: true %>
    <%= f.input :weight %>
    <%= f.input :weight_unit %>
    <%= f.input :breed %>
    <%=f.input :photo, as: :file %>
    <%# <%= f.input :category_id, collection: [Category.order(:name)], as: :radio_buttons, wrapper: :vertical_collection_inline  %>
    <%# <%= f.collection_select :category_id, Category.order(:name), :id, :name  %>
