<div class="card" style="width: 18rem;">
  <% if @pet.photo.attached? %>
    <%= cl_image_tag @pet.photo.key, class: "card-img-top" %>
  <% else %>
    <%= image_tag "puppy.png", size: "auto", style: "border-radius: 5%", class: "card-img-top"%>
  <% end %>
</div>

<%= link_to 'Edit this pet', edit_pet_path(@pet), class: 'btn-primary' %>
<%= link_to 'Back to My Pets', pets_path %>
