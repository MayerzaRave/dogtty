<div class="bg-color">
  <div class="details-container">
    <div class="row align-items-center">
      <div class="col-md-7 align-items-center flex-row-reverse">
        <div class="row details-pet">
          <h3 class="name-pet"><%= @care.title %></h3>
          <h6 class="breed-pet">Category: <%= @care.category %></h6>
          <p><%= @care.details %></p>
        </div>
        <div class="row info-section">
          <div class="col-md-6 text-center">
            <label>Name</label>
            <p><%= @pet.name %></p>
          </div>
          <div class="col-md-6 text-center">
            <label>breed</label>
            <p><%= @pet.breed %></p>
          </div>
          <div class="col-md-6 text-center">
            <label>Weight</label>
            <p><%= @pet.weight %></p>
          </div>
          <div class="col-md-6 text-center">
            <label>status</label>
            <p><%= @care.status %></p>
          </div>
          <div class="col-md-6 text-center">
            <label>Contact</label>
            <p><%= current_user.contact %></p>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="about-avatar">
          <% if @pet.photo.attached? %>
            <%= cl_image_tag @pet.photo.key, class: "card-img-top" %>
          <% else %>
            <%= image_tag "pet.jpg", size: "auto", style: "border-radius: 5%", class: "card-img-top"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="buttons" style="position: absolute; left: 55%;">
    <%= link_to 'Add place', places_new_path, class: 'btn btn-info' %>
    <%= button_to 'Done', care_path(@care), method: :patch, params: { status: 'done' }, class: "btn btn-primary", style: 'display: inline-block'  %>
    <%= link_to "Delete", care_path(@care), data: {turbo_method: :delete} , class:"col btn btn-danger"%>
  </div>
</div>





