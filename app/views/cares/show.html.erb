<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center flex-row-reverse">
      <div class="col-lg-6">
        <div class="about-text go-to">
          <h3 class="dark-color"><%= @care.title %></h3>
          <h6 class="theme-color lead">Categoria: <%= @care.category %></h6>
          <p><%= @care.details %></p>
            <div class="row about-list">
                <div class="col-md-6">
                    <div class="media">
                        <label>Nombre</label>
                        <p><%= @pet.name %></p>
                    </div>
                    <div class="media">
                        <label>Especie</label>
                        <p><%= @pet.specie %></p>
                    </div>
                    <div class="media">
                        <label>Cumplea√±os</label>
                        <p><%= @pet.birthday %></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="media">
                      <label>Peso</label>
                        <p><%= @pet.weight %></p>
                    </div>
                    <div class="media">
                        <label>Phone</label>
                        <p>820-885-3321</p>
                    </div>
                    <div class="media">
                        <label>Estado</label>
                        <p><%= @care.status %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="about-avatar">
            <% if @pet.photo.attached? %>
              <%= cl_image_tag @pet.photo.key, class: "card-img-top" %>
            <% else %>
              <%= image_tag "pet.jpg", size: "auto", style: "border-radius: 5%", class: "card-img-top"%>
            <% end %>
        </div>
        <div class = "row">
          <div class = "col"></div>
          <div class = "col"><%= button_to 'Done', care_path(@care), method: :patch, params: { status: 'done' }, class: "btn btn-info ms-3"  %></div>
          <div class = "col"><%= link_to "Delete", care_path(@care), data: {turbo_method: :delete} , class:"col btn btn-danger mt-2"%></div>
          <div class = "col"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= link_to 'Volver a la lista', cares_path, class: 'btn-primary' %>
