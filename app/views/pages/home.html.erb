<% if user_signed_in? %>
   <div class="container mt-4">
  <%= week_calendar(events: @cares, attribute: :schedule) do |date, cares| %>
    <% cares.each do |care| %>
      <div>
        <%= cl_image_tag Pet.find(care.pet_id).photo.key, class: "avatar my-2" %>
        <%= link_to care.title, cares_path(care)%>
      </div>
    <% end %>
  <% end %>
</div>
<% else %>
  <%= render 'signout' %>
<% end %>
